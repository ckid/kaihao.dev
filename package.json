  "scripts": {
    "build": "gatsby build",
    "build:netlify": "./scripts/build-netlify.sh",
    "develop": "gatsby develop",
    "start": "yarn run develop",
    "serve": "gatsby serve",
    "analyze": "BUILD_ENV=audit yarn run build",
    "test": "echo \"Write tests! -> https://gatsby.app/unit-testing\"",
    "cosmos": "NODE_ENV=test cosmos",
    "cosmos:export": "NODE_ENV=production GATSBY_BUILD_STAGE=build-javascript cosmos-export",
    "check-meta-images-and-commit": "./scripts/check-post-meta-image.sh"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevin940726/kaihao.dev"
  },
  "bugs": {
    "url": "https://github.com/kevin940726/kaihao.dev/issues"
  },
  "dependencies": {
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.7",
    "@mdx-js/mdx": "^0.16.8",
    "@mdx-js/tag": "^0.16.8",
    "fontfaceobserver": "^2.1.0",
    "gatsby": "^2.3.22",
    "gatsby-image": "^2.0.41",
    "gatsby-mdx": "^0.3.5",
    "gatsby-plugin-emotion": "^4.0.3",
    "gatsby-plugin-google-analytics": "^2.0.18",
    "gatsby-plugin-manifest": "^2.0.17",
    "gatsby-plugin-netlify": "^2.0.10",
    "gatsby-plugin-offline": "^2.0.23",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.2",
    "gatsby-plugin-react-helmet": "^3.0.6",
    "gatsby-plugin-remove-trailing-slashes": "^2.0.9",
    "gatsby-plugin-sharp": "^2.0.20",
    "gatsby-source-filesystem": "^2.0.20",
    "gatsby-transformer-sharp": "^2.1.13",
    "modern-normalize": "^0.5.0",
    "polished": "^3.2.0",
    "prism-react-renderer": "^0.1.5",
    "prismjs": "^1.15.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^6.0.0-beta",
    "react-inlinesvg": "^0.8.4",
    "react-live": "^1.12.0",
    "slugify": "^1.3.4"
  },
  "devDependencies": {
    "canopic": "^0.1.1",
    "gatsby-plugin-webpack-bundle-analyzer": "^1.0.4",
    "html-webpack-plugin": "^3.2.0",
    "puppeteer": "^1.15.0",
    "react-cosmos": "^5.0.0-alpha.5",
    "wait-for-localhost": "^3.2.0"
  },
  "resolutions": {
    "react-live/prismjs": "1.15.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md,mdx,html}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{mdx}": [
      "node scripts/generate-meta-image.js",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  }
}
